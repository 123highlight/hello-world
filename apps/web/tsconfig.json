{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./app/components/*"],
      "@/lib/*": ["./lib/*"],
      "@/i18n": ["./i18n"],
      "@/i18n/*": ["./i18n/*"],
      "@/navigation": ["./navigation"],
      "@/messages/*": ["./messages/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.cjs", "**/*.mjs", "**/*.json"],
  "exclude": ["node_modules"]
}
